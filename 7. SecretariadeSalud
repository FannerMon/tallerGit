Proceso SecretariadeSalud
	
	definir Estatura,Peso,IndiceMasaCorporal Como Real;
	Definir NombrePersona,Rango Como Caracter;
	
	Escribir "Regaleme su nombre, Por favor";
	leer NombrePersona;
	
	Escribir "Bienvenido SR(@)", NombrePersona," a La Secretaria de Salud Municipal, Regaleme los Siguientes Datos";
	
	escribir"Peso Del paciente en Kg";
	leer Peso;
	escribir" Estatura del Paciente en M (Separado con Punto 1.25)";
	leer Estatura;
	
	//El indice de masa coorporal se calculo asi, el peso / la estatura*la estatura
	
	//bajo de peso = menos que 18 en indice masa cooporal
	// peso normal = entre 18 y 25 
	//sobre peso= entre 25 y 30
	//obesidad= 30 hacia adelante
	IndiceMasaCorporal<- (peso/(Estatura*Estatura));
	
	
	si IndiceMasaCorporal <= 17.9 Entonces
		escribir" El Paciente se encuentra Bajo de peso con un Indice de Masa Corporal  de " ,IndiceMasaCorporal;
sino
	

		si (IndiceMasaCorporal >= 18) y (IndiceMasaCorporal<=25) Entonces
			Escribir "el Paciente se encuentra Normal de peso con un Indice de Masa Corporal",IndiceMasaCorporal;
		sino
		
		
		si (IndiceMasaCorporal >=26) y (IndiceMasaCorporal<=30) Entonces
			Escribir "el Paciente se encuentra en Sobre Peso con un Indice de Masa Corporal",IndiceMasaCorporal;
	sino
		
		si  (IndiceMasaCorporal>=31) Entonces
			Escribir "el Paciente se encuentra en Obesidad con un Indice de Masa Corporal",IndiceMasaCorporal;
		FinSi
	FinSi
FinSi
FinSi
FinProceso
//FANNERMONTALVO